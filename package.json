{
  "name": "serverless-starter",
  "version": "1.0.0",
  "license": "proprietary",
  "private": true,
  "scripts": {
    "start": "AUTHORIZER=$(cat tests/local-auth.txt | xargs) serverless offline start --noAuth",
    "prepare": "husky install && husky add .husky/pre-commit 'yarn lint-staged'",
    "deploy": "serverless deploy",
    "test": "jest"
  },
  "dependencies": {
    "@flexible-agency/serverless-middleware": "^1.3.0",
    "aws-sdk": "^2.1087.0",
    "dynamodb-toolbox": "^0.3.5",
    "joi": "^17.6.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.14.7",
    "babel-jest": "^27.0.6",
    "esbuild": "^0.14.25",
    "husky": "^6.0.0",
    "jest": "^27.0.6",
    "jest-junit": "^12.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.2",
    "serverless": "^3.7.1",
    "serverless-domain-manager": "^6.0.2",
    "serverless-esbuild": "^1.25.0",
    "serverless-offline": "^8.5.0",
    "serverless-s3-sync": "^3.0.0"
  },
  "jest": {
    "setupFiles": [
      "./tests/set-env.js"
    ]
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
